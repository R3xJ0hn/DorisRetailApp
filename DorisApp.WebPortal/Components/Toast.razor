
<div id="@ToastId" class="toast align-items-center @toastColor" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="d-flex">
    <div class="toast-body" style="color: white">
            @Message
    </div>
    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>


@code {

    private string toastColor = "";

    private string toastMode = "";

    [Parameter]
    public string ToastMode
    {
        get => toastMode;
        set
        {
            toastMode = value;

            if (value == "danger" )
            {
                toastColor = "bg-danger";
            }
            else if (value == "success")
            {
                toastColor = "bg-success";
            }
            else
            {
                toastColor = "bg-warning";
            }
        }
    }

    [Parameter]
    public string ToastId { get; set; }

    [Parameter]
    public string Message { get; set; }


}
