<div class="category-page-content">

    <div class="row">

        <div class="col-lg-9">

            <div class="row align-items-end">
                <div class="col ">
                    <h3 class="table-title">List of Categories</h3>
                </div>

                <div class="col ">
                    <button type="button" class="add-btn btn btn-gradient-primary " data-bs-toggle="modal"
                            data-bs-target="#categoryModal" @onclick="OpenAddProductModal">
                        <i class="fa-regular fa-circle-plus"></i>
                        Add
                    </button>
                </div>
            </div>

            <div class="table-card">

                <div class="row ">
                    <div class="col-md  d-flex">
                        <div class="search-bar">
                            <input type="search" class="form-control" placeholder="Search...">
                        </div>

                        <div class="sort-select">
                            <label for="sort-table">Sort by:</label>
                            <select class="form-select form-select-sm" id="sort-table"
                                    aria-label=".form-select-sm example">
                                <option selected>Select Order</option>
                                <option value="1">Name</option>
                                <option value="2">No. Product</option>
                            </select>
                        </div>
                    </div>

                </div>

                <div class="table-wrapper">
                    <table class="table">

                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Category Name</th>
                                <th scope="col">No. of Sub Categories</th>
                                <th scope="col">No. of Product</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>

                        <tbody>

                            @if(requestTableResult != null)
                            {
                                @foreach (var item in requestTableResult.Models)
                                {
                                    <tr>
                                        <td scope="row">
                                            <span></span>
                                        </td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.SubcategoryCount</td>
                                        <td>@item.ProductCount</td>
                                        <td>
                                            <div class="table-icons">
                                                <i class="fa-solid fa-pencil" data-bs-toggle="modal"
                                                     data-bs-target="#categoryModal"
                                                     @onclick="@(() => OpenEditProductModal(item.Id))"></i>
                                                <i class="fa-solid fa-xmark"></i>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <div class="row justify-content-center align-items-lg-center">
                                    <h6>No Category has been loaded.</h6>
                                </div>
                            }

                        </tbody>

                    </table>

                </div>

                @if(requestTableResult != null)
                {
                    @if (requestTableResult.TotalPages > 1)
                    {
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-end">
                                <li class="page-item disabled">
                                    <a class="page-link">Previous</a>
                                </li>

                                @*@for (int i = 1; i < requestItems.TotalPages; i++)
                        {
                        <li class="page-item"><a class="page-link" @onclick="RequestPage(i)"> @i </a></li>
                        }*@

                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    }
                }

            </div>
        </div>

        <div class="col-lg-3">

            <div class="product-list-view">

                <div class="product-list-view-body">

                    <div class="product-list-view-header">
                        <h5>Beauty and Care</h5>
                        <p>1 item</p>
                    </div>

                    <div class="product-list-view-content">

                        <ul>
