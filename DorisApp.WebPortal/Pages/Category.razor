<Modal modalId="categoryModal"
       Title= "@modalTitle"
       SaveButtonText="Save"
       OnSave="SaveHandler">

    <p class="card-description text-justify">
        This is where you can add new product category to your website.
        Just fill out the form with the category name.
    </p>

    <EditForm Model="@modalModel" OnInvalidSubmit="@SaveHandler">
        <DataAnnotationsValidator/>

        <div class="mb-3">
            <label for="productName" class="form-label">Category Name</label>
            <InputText id="categoryName" class="form-control" placeholder="Product Name" @bind-Value="modalModel.CategoryName" />
            <ValidationMessage For="@(()=> modalModel.CategoryName)"/>
        </div>

    </EditForm>

</Modal>

<div class="toast-container position-fixed top-0 end-0 p-3">
    <Toast ToastId="categoryToast" Message="@toastMessage" />
</div>


@code {
    RequestPageDTO request = new();
    RequestModel<CategoryTableDTO> requestTableResult;

    CategoryModel modalModel = new ();
    string? errorMessage;
    string? toastMessage;
    private string modalTitle = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        request.PageNo =1;
        request.ItemPerPage = int.Parse(Config["AppSettings:itemPerPage"]);
        request.OrderBy = GetOrderBy.NameAcs;
        requestTableResult = await CategoryEndpoint.GetTableCategories(request);
    }

    private void RequestPage(int page)
    {

    }

    private void OpenAddProductModal()
    {
        modalTitle = "Add New Modal";
    }

    private void OpenEditProductModal(int id)
    {
        modalTitle = "Add New Modal" + id.ToString();
    }

    private async Task SaveHandler()
    {
        errorMessage = "";

        try
        {
            var name = modalModel.CategoryName;

            if (name is not null)
            {
                await CategoryEndpoint.AddCategoryAsync(name);
                toastMessage = "Successfully added new category.";

                await JSRuntime.InvokeVoidAsync("modalProcessDone", "#categoryModal");
                await JSRuntime.InvokeVoidAsync("showToast", "#categoryToast");
            }

        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
            toastMessage = "An error occured";
            Console.WriteLine(errorMessage);
            await JSRuntime.InvokeVoidAsync("modalProcessDone");
        }

    }

}